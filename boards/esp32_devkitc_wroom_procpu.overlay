
/ {
	aliases {
		led0 = &led0;
		/* sw0 = &button0; */
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
			label = "LED";
		};
	};

	wifi {
		status = "okay";
	};

